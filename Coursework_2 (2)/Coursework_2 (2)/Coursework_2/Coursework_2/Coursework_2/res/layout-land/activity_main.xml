<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <LinearLayout
        android:id="@+id/SpinnerHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/tvChannelSelector"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.20" />

        <Spinner
            android:id="@+id/daySelector"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvChannelSelector"
            android:layout_alignBottom="@+id/tvChannelSelector"
            android:layout_weight="0.11" />

    </LinearLayout>

    <LinearLayout 
        android:layout_below="@id/SpinnerHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >
    <ListView
        android:id="@+id/lvTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChannelSelector"
        android:layout_centerHorizontal="true" >

    </ListView>
    
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvChannelSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lvTest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

    </LinearLayout>

</RelativeLayout>